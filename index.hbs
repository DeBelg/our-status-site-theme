{{!< default}}

<div class="intro">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h1>{{@site.title}}</h1>
                <p>{{@site.description}}</p>
            </div>
        </div>
    </div>
</div>

{{!-- The main content area --}}
<main id="content" role="main">
    <div class="container">
        <div class="row">
            <div class="col-md-10 ml-auto mr-auto">
                <div class="loop">
                    {{#foreach posts}}
                        {{> "loop"}}
                    {{/foreach}}
                </div>
            </div>
        </div>
    </div>
</main>

{{pagination}}